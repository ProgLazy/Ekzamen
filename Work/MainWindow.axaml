<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Work.MainWindow"
        Icon="Assets\logo-abd.png"
        Title="YogaCenter">
        <StackPanel>
                <StackPanel>
                        <TextBlock>Введите логин</TextBlock>
                        <TextBox Name="login" Watermark="Login"></TextBox>
                        
                        <TextBlock>Введите пароль</TextBlock>
                        <TextBox Name="password" Watermark="Password"></TextBox> 
                </StackPanel>
                <StackPanel>
                        <Button Name="Enter" Content="Enter" Background="Khaki" Click="Enter_OnClick"></Button>
                        <Button Name="Registration" Content="Registration" Background="Khaki" Click="Registration_OnClick"></Button>
                </StackPanel>
        </StackPanel>
</Window>
